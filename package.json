	"version": "0.2.1",
	"private": false,
	"description": "The Block Tower animation used in Tari Universe",
	"homepage": "https://github.com/tari-project/tari-tower#readme",
	"bugs": {
		"url": "https://github.com/tari-project/tari-tower/issues"
	},
