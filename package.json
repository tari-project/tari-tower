	"devDependencies": {
		"@eslint/js": "^9.19.0",
		"@tweakpane/core": "^2.0.5",
		"@types/node": "^24.6.2",
		"@types/three": "^0.180.0",
		"@typescript-eslint/parser": "^8.24.1",
		"eslint": "^9.36.0",
